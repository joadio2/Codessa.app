---
const { text } = Astro.props;
import Lottie from "lottie-react";
import message from "../../assets/lottie/message.json";
---

<section id="contact" class="contact-section">
  <div class="container">
    <div class="message">
      <h2>{text('contact.title') || 'Contáctanos'}</h2>
      <Lottie
        animationData={message}
        loop
        autoplay
        style={{ width: "15%", height: "15%" }}
        client:only="react"
      />

    </div>
    <p>{text('contact.subtitle') || '¿Tienes una idea? Hablemos.'}</p>

    <form class="contact-form"  method="POST" name="contact">
      <input type="hidden" name="form-name" value="contact" />
      
      <div class="form-group">
        <label for="name">{text('contact.name') || 'Nombre'}</label>
        <input type="text" id="name" name="name" required />
      </div>

      <div class="form-group">
        <label for="email">{text('contact.email') || 'Email'}</label>
        <input type="email" id="email" name="email" required />
      </div>

      <div class="form-group">
        <label for="message">{text('contact.message') || 'Mensaje'}</label>
        <textarea id="message" name="message" rows="5" required></textarea>
      </div>

      <button type="submit" class="submit-button">
        {text('contact.button') || 'Enviar'}
      </button>
    </form>
  </div>
</section>

<style>
  .contact-section {
   
    padding: 4rem 1rem;
    background: #180152;
    color: var(--cyber-green);
  }
  .container {
    margin: 0 auto;
    max-width: 600px;
  }
  .container p {
    color: white;
  }
  .message {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }
  .form-group {
    display: flex;
    flex-direction: column;
  }
  label{
    margin-bottom: 0.2rem;
    color: white;
  }
  input, textarea {
    padding: 0.75rem;
    font-size: 1rem;
    border-radius: 6px;
    border: 1px solid #ccc;
  }
  .submit-button {
    border: 0;
  background: linear-gradient(90deg, #ff00cc, #00c3ff);
  color: white;
  padding: 1.2rem 2.8rem;
  border-radius: 0.5rem;
  text-decoration: none;
  font-weight: bold;
  font-size: 1.1rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
  box-shadow: 0 8px 25px rgba(0, 195, 255, 0.3);
  margin-top: 4rem;
  cursor: pointer;
  }
  .submit-button:hover {
    
  transform: translateY(-5px);
  box-shadow: 0 12px 35px rgba(0, 195, 255, 0.5);
  background: linear-gradient(90deg, #e600b8, #00a0e6);

  }
 
  
</style>
